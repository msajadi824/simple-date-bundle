{% block jSDate_widget -%}
    {{- block('form_widget_simple') -}}

    {% set dateOptions = {
        'placement': 'bottom',
        'trigger': 'focus',
        'enableTimePicker': false,
        'targetTextSelector': '#' ~ id,
        'groupId': '',
        'fromDate': false,
        'toDate': false,
        'disableBeforeToday': false,
        'disabled': false,
        'textFormat': 'yyyy/MM/dd',
        'isGregorian': locale != 'fa',
        'englishNumber': locale != 'fa'
    }|merge(pickerOptions) %}

    <script type="text/javascript">
        $(function () {
            $('#{{ id }}').MdPersianDateTimePicker({{ dateOptions|json_encode(constant('JSON_PRETTY_PRINT'))|raw }});
        });
    </script>
{%- endblock jSDate_widget %}

