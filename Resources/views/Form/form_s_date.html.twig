{% block jSDate_widget -%}
    {{- block('form_widget_simple') -}}

    {% set dateOptions = {
        'Placement': 'bottom',
        'Trigger': 'focus',
        'EnableTimePicker': false,
        'TargetSelector': '#' ~ id,
        'GroupId': '',
        'FromDate': false,
        'ToDate': false,
        'DisableBeforeToday': false,
        'Disabled': false,
        'Format': 'yyyy/MM/dd',
        'IsGregorian': locale != 'fa',
        'EnglishNumber': locale != 'fa'
    }|merge(pickerOptions) %}

    <script type="text/javascript">
        $(function () {
            $('#{{ id }}').MdPersianDateTimePicker({{ dateOptions|json_encode(constant('JSON_PRETTY_PRINT'))|raw }});
        });
    </script>
{%- endblock jSDate_widget %}
